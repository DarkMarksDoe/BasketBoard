<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="5"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="1dp"
        android:background="@drawable/bordelayout"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:gravity="center">
        <LinearLayout
            android:background="@drawable/bordederecho"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/et3_imagenjugador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/paddingIcon"
                app:srcCompat="@drawable/ic_toronto"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView

                android:layout_weight="5"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrincipal"
                android:textStyle="bold"
                android:text="Raptors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/partidos_equipo1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:id="@+id/item_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="57"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="1dp"
        android:background="@drawable/bordelayout"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:gravity="center">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/et3_imagenjugador2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/paddingIcon"
                app:srcCompat="@drawable/ic_chicago"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center">
            <TextView
                android:layout_weight="5"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrincipal"
                android:textStyle="bold"
                android:text="Bulls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/partidos_equipo2"/>
            />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:id="@+id/item_number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="69"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:background="@color/black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <com.ornach.nobobutton.NoboButton
                android:gravity="center_vertical|right"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center_vertical"
                app:nb_text="VER  "
                app:nb_textSize="18sp"
                android:textAlignment="center"
                app:nb_textColor="@color/white"
                app:nb_iconPosition="right"
                app:nb_backgroundColor="@color/colorPrimary"
                app:nb_borderWidth="2dp"
                app:nb_fontIcon="&#xf0c7;"
                app:nb_iconSize="20dp"
                app:nb_iconColor="#FFFFFF"
                app:nb_focusColor="#B83CC3"
                app:nb_radius="15dp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:layout_weight="3"/>

    </LinearLayout>

</LinearLayout>
